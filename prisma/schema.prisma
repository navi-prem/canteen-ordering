generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dish {
  id       String @id @default(cuid())
  name     String @unique
  quantity Int
  price    Int
  url      String
}

model user {
    id String @id @default(cuid())
    orders order[]
}

model order {
    id String @id @default(cuid())
    name String
    quantity Int
    user user @relation(fields: [userId], references: [id])
    userId String
    date DateTime @default(now())
}

model admin {
    user String @id
    pass String
}
